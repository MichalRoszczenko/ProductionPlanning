@model Production.Application.InjectionMoldMachines.InjectionMoldingMachineDto

@{
    ViewData["Title"] = "Injection Molding Machine Details";
}

<h1>Injection Molding Machine Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Online)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Online)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tonnage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tonnage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
    </dl>
</div>
<hr />
@if (Model.PlannedProductions != null)
{
    <h3>Planned Productions</h3>
    <div style="width: 50%;">
        <table class="table table-bordered border-primary">
            <thead class="table-secondary">
                <tr>
                    <th scope="col">Production Id</th>
                    <th scope="col">Start Production</th>
                    <th scope="col">End Production</th>
                </tr>
            </thead>
            <tbody class="table-warning">
                @foreach (var item in Model.PlannedProductions)
                {
                    <tr>
                        <th scope="row">@item.ProductionId</th>
                        <td>@item.StartProduction</td>
                        <td>@item.EndProduction</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<hr />
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-machineId="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
