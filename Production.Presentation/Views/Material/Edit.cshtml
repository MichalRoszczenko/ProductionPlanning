@model Production.Application.Material.MaterialDto

@{
    ViewData["Title"] = "Edit Material";
}

<h1>Edit Material</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialInStock" class="control-label">Material In Stock</label>
                <input asp-for="MaterialInStock" class="form-control" />
                <span asp-validation-for="MaterialInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialOnProduction" class="control-label">Material On Production</label>
                <input asp-for="MaterialOnProduction" class="form-control" />
                <span asp-validation-for="MaterialOnProduction" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>