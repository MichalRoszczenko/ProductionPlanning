@model IEnumerable<Production.Application.Material.MaterialDto>

@{
    ViewData["Title"] = "Materials";
}

<h1>Materials</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" style="text-align:center">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Material in stock
            </th>
            <th>
                Material scheduled in stock
            </th>
            <th>
                Material on production
            </th>
            <th>
                Material left
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.MaterialInStock)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.MaterialScheduledInStock)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.MaterialOnProduction)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.MaterialLeft)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
