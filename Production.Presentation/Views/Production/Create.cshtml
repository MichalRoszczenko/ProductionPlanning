@model Production.Application.Production.ProductionDtoInput

@{
    ViewData["Title"] = "Create";
}

<h1>Create Production</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Start" class="control-label">Scheduled start of production</label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="End" class="control-label">Scheduled end of production</label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InjectionMoldId" class="control-label">Injection Mold</label>

                <select class="form-control" asp-for="InjectionMoldId">
                    <option value="" disabled selected>-- Select an item --</option>
                    @foreach(var mold in ViewBag.Molds)
                    {
                        <option value="@mold.Id">@mold.Name</option>
                    }
                </select>

                <span asp-validation-for="InjectionMoldId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InjectionMoldingMachineId" class="control-label">Injection molding machine ID</label>
                <input asp-for="InjectionMoldingMachineId" class="form-control" />
                <span asp-validation-for="InjectionMoldingMachineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
