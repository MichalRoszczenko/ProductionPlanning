@model Production.Application.Productions.ProductionDto

@{
    ViewData["Title"] = "Production Details";
}

<h1>Production Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Proudction Start
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class = "col-sm-2">
            Proudction End
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
        <dt class = "col-sm-2">
            Production Time In Hours
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductionTimeInHours)
        </dd>
        <dt class = "col-sm-2">
            Injection Mold
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InjectionMoldName)
        </dd>
        <dt class = "col-sm-2">
            Injection Molding Machine
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InjectionMoldingMachineName)
        </dd>
        <dt class="col-sm-2">
            Material is Ready
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaterialIsRdy)
            
        </dd>
    </dl>
</div>
<hr />
<div>
    @if(!Model.MaterialIsRdy)
    {
        <a class="btn btn-danger" asp-action="CheckMaterial" asp-route-productionId="@Model.Id">Check material in stock</a>
    }
    <a class="btn btn-primary" asp-action="Edit" asp-route-productionId="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
