@model Production.Application.Productions.ProductionDto

@{
    ViewData["Title"] = "Edit Production";
    var productionId = ViewContext.RouteData.Values["productionId"]?.ToString();
}

<h1>Edit Production</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@productionId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InjectionMoldId" class="control-label">Injection Mold</label>
                <select class="form-control" asp-for="InjectionMoldId">
                    <option value="" disabled selected>-- Select an item --</option>
                    @foreach (var mold in ViewBag.Molds)
                    {
                        <option value="@mold.Id">@mold.Name</option>
                    }
                </select>
                <span asp-validation-for="InjectionMoldId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InjectionMoldingMachineId" class="control-label">Injection Molding Machine</label>
                <select class="form-control" asp-for="InjectionMoldingMachineId">
                    <option value="" disabled selected>-- Select an item --</option>
                    @foreach (var machines in ViewBag.Machines)
                    {
                        <option value="@machines.Id">@machines.Name</option>
                    }
                </select>
                <span asp-validation-for="InjectionMoldingMachineId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
