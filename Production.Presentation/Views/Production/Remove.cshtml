@model Production.Application.Productions.ProductionDto

@{
    ViewData["Title"] = "Remove Production";
}

<h3>Are you sure you want to delete production with the ID: @Model.Id?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Start
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class = "col-sm-2">
            End
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
        <dt class = "col-sm-2">
            Production Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductionTimeInHours)
        </dd>
        <dt class = "col-sm-2">
            Injection Mold
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InjectionMoldName)
        </dd>
        <dt class = "col-sm-2">
            Injection Machine
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InjectionMoldingMachineName)
        </dd>
    </dl>
    
    <form asp-action="Remove">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
